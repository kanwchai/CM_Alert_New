<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/list_view"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/linRecycle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/car_list_4_11_59"
        android:layout_weight="1.9"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="1.4">

        <TextView
            android:id="@+id/car_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textColor="@color/ampm_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/car_Province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Province"
            android:textColor="@color/ampm_text_color"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.7">

        <com.saikaew_rus.cm_alert_new.A_CircularBar
            android:id="@+id/circularprogressbar2"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            circular:cpb_subtitle="subtitle"
            circular:cpb_title="..."
            circular:cpb_strokeWidth="20"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </LinearLayout>

</LinearLayout>